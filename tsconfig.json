{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "target": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "jsx": "preserve",
    "baseUrl": "."
  },
  "include": [
    "next-env.d.ts",
    "src/types/*",
    "src/pages/**/*",
    "src/**/*"
  ],
  "exclude": [
    ".cache",
    ".next",
    ".vscode",
    ".yarn",
    "public"
  ]
}
